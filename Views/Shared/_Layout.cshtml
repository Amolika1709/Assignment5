<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bulls Bookstore</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="icon" type="image/png" href="~/images/fav.png">
</head>
<body>
    <header>
        <h1 class="logo">Bulls Bookstore</h1>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("About", "Home")">About Us</a></li>
                <li><a href="@Url.Action("Books", "Home")">Browse Books</a></li>
                <li><a href="@Url.Action("Trending", "Home")">Trending</a></li>
                <!-- More links -->
            </ul>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; Bulls Bookstore</p>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>